<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="m-0">Restaurants</h1>
</div>

<div class="row g-3">
  <% @restaurants.each do |restaurant| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-1">
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %>
          </h5>
          <p class="text-muted mb-2"><%= restaurant.address %></p>

          <span class="badge text-bg-secondary"><%= restaurant.category.capitalize %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>
