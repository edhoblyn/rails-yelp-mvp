<div class="mb-3">
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div>
        <h1 class="h3 mb-1"><%= @restaurant.name %></h1>
        <div class="text-muted"><%= @restaurant.address %></div>
        <% if @restaurant.phone_number.present? %>
          <div class="text-muted"><%= @restaurant.phone_number %></div>
        <% end %>
      </div>

      <span class="badge text-bg-secondary fs-6"><%= @restaurant.category.capitalize %></span>
    </div>
  </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-2">
  <h2 class="h4 m-0">Reviews</h2>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary btn-sm" %>
</div>

<div class="list-group">
  <% if @restaurant.reviews.any? %>
    <% @restaurant.reviews.each do |review| %>
      <div class="list-group-item">
        <div class="d-flex justify-content-between">
          <strong><%= review.rating %>/5</strong>
        </div>
        <div><%= review.content %></div>
      </div>
    <% end %>
  <% else %>
    <div class="list-group-item text-muted">No reviews yet. Be the first!</div>
  <% end %>
</div>
